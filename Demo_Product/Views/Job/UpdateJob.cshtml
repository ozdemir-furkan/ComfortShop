@model EntityLayer.Concrete.Job
@{
    ViewData["Title"] = "UpdateJob";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<form method="post">
    @Html.Label("Meslek Id")
    @Html.TextBoxFor(x => x.JobId, new { @class = "form-control" })
    <br />
    @Html.Label("Meslek Adı")
    @Html.TextBoxFor(x => x.JobName, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Mesleği Güncelle</button>
</form>


